version: "3.3"
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    environment:
      CONFIG_PATH: "/app/config/config.yaml"
    depends_on:
      - mysql
    entrypoint: >
      sh -c "
      until nc -z mysql 3306; do
        echo 'Waiting for MySQL...';
        sleep 3;
      done;
      ./main"
      entrypoint: >
  sh -c "
  until (echo > /dev/tcp/mysql/3306) >/dev/null 2>&1; do
    echo 'Waiting for MySQL...';
    sleep 3;
  done;
  ./main"

  mysql:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: user_service
    ports:
      - "3306:3306"
      
  redis:
    image: redis:alpine
    ports:
      - "6379:6379"

